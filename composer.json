{
    "name": "dbp/relay-base-course-bundle",
    "type": "symfony-bundle",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "api-platform/core": "^2.7.11 || ^3.2",
        "dbp/relay-core-bundle": "^0.1.171",
        "symfony/config": "^7.0",
        "symfony/framework-bundle": "^7.0",
        "symfony/http-foundation": "^7.0",
        "symfony/http-kernel": "^7.0",
        "symfony/dependency-injection": "^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4",
        "phpstan/phpstan": "^1.8.11",
        "phpstan/phpstan-phpunit": "^1.2.2",
        "phpunit/phpunit": "^10.1",
        "symfony/browser-kit": "^7.0",
        "symfony/http-client": "^7.0",
        "symfony/monolog-bundle": "^3.8",
        "symfony/phpunit-bridge": "^7.0",
        "vimeo/psalm": "^5.22.2",
        "symfony/error-handler":"^7.0",
        "symfony/monolog-bridge":"^7.0"
    },
    "autoload": {
        "psr-4": {
            "Dbp\\Relay\\BaseCourseBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dbp\\Relay\\BaseCourseBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.1"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "scripts": {
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "phpstan": [
            "@php vendor/bin/phpstan analyze --ansi"
        ],
        "psalm": [
            "@php vendor/bin/psalm"
        ],
        "lint": [
            "@composer run cs",
            "@composer run phpstan",
            "@composer run psalm"
        ],
        "cs-fix": [
            "@php vendor/bin/php-cs-fixer --ansi fix"
        ],
        "cs": [
            "@php vendor/bin/php-cs-fixer --ansi fix --dry-run --diff"
        ],
        "coverage": [
            "@php vendor/bin/phpunit --coverage-html _coverage"
        ]
    }
}
